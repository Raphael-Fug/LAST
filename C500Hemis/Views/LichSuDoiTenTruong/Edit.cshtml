@model C500Hemis.Models.TbLichSuDoiTenTruong

@{
    ViewData["Title"] = "Edit";
}

<hr />
<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header text-center">
            <h3 class="mb-0">Thông tin lịch sử đổi tên trường</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdLichSuDoiTenTruong" />
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="TenTruongCu" class="control-label">Tên trường cũ</label>
                        <input asp-for="TenTruongCu" class="form-control" placeholder="Nhập tên trường cũ" />
                        <span asp-validation-for="TenTruongCu" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="TenTruongCuTiengAnh" class="control-label">Tên trường cũ bằng tiếng anh</label>
                        <input asp-for="TenTruongCuTiengAnh" class="form-control" placeholder="Nhập tên trường cũ (tiếng Anh)" />
                        <span asp-validation-for="TenTruongCuTiengAnh" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="SoQuyetDinhDoiTen" class="control-label">Số quyết định đổi tên</label>
                        <input asp-for="SoQuyetDinhDoiTen" class="form-control" placeholder="Nhập số quyết định đổi tên" />
                        <span asp-validation-for="SoQuyetDinhDoiTen" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="NgayKyQuyetDinhDoiTen" class="control-label">Ngày ký quyết định</label>
                        <input asp-for="NgayKyQuyetDinhDoiTen" class="form-control" type="date" />
                        <span asp-validation-for="NgayKyQuyetDinhDoiTen" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between mt-3">
                        <a asp-action="Index" class="btn btn-outline-primary">Quay lại danh sách</a>
                        <input type="submit" value="Lưu" class="btn btn-outline-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-image: url('@Url.Content("~/images/snapedit_1729475551212.jpeg")'); /* Đường dẫn đến hình ảnh nền */
        background-size: cover; /* Tự động căn chỉnh */
        background-position: center; /* Căn giữa hình ảnh */
        background-repeat: no-repeat; /* Không lặp lại hình ảnh */
    }

    .card {
        background-color: rgba(255, 255, 255, 0.9); /* Nền trắng với độ trong suốt */
    }

    .card-header {
        background-color: #96D4D4;
        color: black;
        font-family: 'Times New Roman', Times, serif;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        border: 1px solid #ced4da; /* Màu viền */
    }

    .form-control:focus {
        border-color: #007bff; /* Màu viền khi focus */
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5); /* Hiệu ứng bóng */
    }

    .btn-primary {
        background-color: #007bff; /* Màu nút chính */
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3; /* Màu nút khi hover */
        border-color: #0056b3;
    }

    .btn-secondary {
        background-color: #6c757d; /* Màu nút phụ */
        border-color: #6c757d;
    }

    .btn-secondary:hover {
        background-color: #5a6268; /* Màu nút phụ khi hover */
        border-color: #545b62;
    }

    footer {
        visibility: hidden;
    }
</style>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
